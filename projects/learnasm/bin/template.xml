			<split/>
			
			<eval value="$size = randomSelect(2, 4)"/>
			<eval value="$numb = if(eq($size, 2), random(-128, 127), random(-32768, 32767))"/>
			<eval value="$dwdb = if(eq($size, 2), 'DB', 'DW')"/>
			<eval value="$hex = toHex($numb, $size)"/>
